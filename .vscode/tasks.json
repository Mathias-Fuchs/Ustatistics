

{
    "version": "2.0.0",
    "label": "Ustatistics all",
    "type": "shell",
    "command": "make",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "group": {
        "kind": "build",
        "isDefault": true
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "reveal": "always",
    "args": ["all"],
    "problemMatcher": {
                    "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        
    
}